<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#777" />
                    <gradient
                        android:startColor="#ffffff"
                        android:centerColor="#ffffff"
                        android:endColor="#ffffff"
                        android:angle="270" />
                    <size
                        android:width="30dp"
                        android:height="30dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#777" />
                    <gradient
                        android:startColor="@color/SUB_COLOR_K80"
                        android:centerColor="@color/SUB_COLOR_K80"
                        android:endColor="@color/SUB_COLOR_K80"
                        android:angle="270" />
                    <size
                        android:width="5dp"
                        android:height="5dp" />
                </shape>
            </item>


        </layer-list>
    </item>

</selector>